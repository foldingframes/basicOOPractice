class Main {
    public static void main(String[] args) {
        
        double radius = 5.5;
        double pi = 3.14;
        
        Circle c = new Circle();
        c.setRadius(radius);
        c.setPi(pi);
        
        
        System.out.println("Area is "  + c.getArea());
        System.out.println("Perimeter is "  + c.getPerimeter());
        
        double celsius = 32;
        double fahrenheit = 67;
        
        Temperature tf = new Temperature();
        tf.setCelsius(celsius);
        System.out.println("The temperature for Fahrenheit is "  + tf.getFahrenheit());
        
        Temperature tc = new Temperature();
        tc.setFahrenheit(fahrenheit);
        System.out.println("The temperature for Celsius is "  + tc.getCelsius());
    }
    
    
}

class Temperature {
    
    private double celsius;
    private double fahrenheit;
    private double constF;
    private double constC;
    private double constNum;
    
    public double constNum(double myCelsius){
        this.celsius = myCelsius;
        return celsius;
    }
    
    
    
    public double setCelsius(double myCelsius){
        this.celsius = myCelsius;
        return celsius;
    }
    
    public double setFahrenheit(double myFahrenheit){
        this.fahrenheit = myFahrenheit;
        return fahrenheit;
    }
    
    public double getFahrenheit(){
        fahrenheit = ((9.0/5.0)*celsius) + 32.0;
        return fahrenheit;
    }
    
    public double getCelsius(){
        celsius = ((fahrenheit-32) * (5.0/9.0));
        return celsius;
    }
    
}

class Circle {
    
    private double radius;
    private double pi;
    private double perimeter;
    private double area;
    
    public double setRadius(double myRadius){
       this.radius = myRadius;
       return radius;
    }
    
    public double setPi(double myPi){
       this.pi = myPi;
       return pi;
    }
    
    public double getPerimeter(){
       perimeter = 2*radius*pi;
       return perimeter;
    }
    public double getArea(){
       area = Math.pow(radius,2) * pi;
       return area;
    }
}



